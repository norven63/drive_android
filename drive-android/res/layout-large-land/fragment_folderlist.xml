<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/openfailure_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/openfailure"
            android:textColor="@color/Gray"
            android:textSize="@dimen/listItemTextSize_large"
            android:visibility="invisible" />

        <!-- <ImageView
            android:id="@+id/openfailure_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_open_failure"
            android:visibility="invisible" /> -->
    </LinearLayout>

    <ListView
        android:id="@+id/android:list"
        android:dividerHeight="1dp"
        android:divider="@color/Black"
        android:layout_marginTop="15dp"
        android:background="@drawable/style_list_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</FrameLayout>